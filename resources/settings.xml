<?xml version="1.0" ?>
<settings version="1">
    <section id="script.akl.steam">
        <category id="akl_general" label="30012">
			<group id="1">
                <setting id="steam-api-key" type="string" label="30125" help="">
                    <level>0</level>
                    <default></default>
                    <constraints>
                        <allowempty>true</allowempty>
                    </constraints>
                    <control type="edit" format="string">
                        <heading>30125</heading>
                    </control>
                </setting>
            </group>
        </category>
        <category id="akl_launching" label="30010">
			<group id="1">
                <setting id="media_state_action" type="integer" label="30121" help="">
                    <level>0</level>
                    <default>0</default>
                    <constraints>
                        <options>
                            <option label="30901">0</option>
                            <option label="30902">1</option>
                            <option label="30903">2</option>
                        </options>
                    </constraints>
                    <control type="spinner" format="string"/>
                </setting>
                <setting id="delay_tempo" type="slider" label="30122" help="">
                    <level>0</level>
                    <default>500</default>
                    <constraints>
                        <minimum>0</minimum>
                        <step>100</step>
                        <maximum>1500</maximum>
                    </constraints>
                    <control type="slider" format="integer">
                        <popup>false</popup>
                    </control>
                </setting>
                <setting id="suspend_audio_engine" type="boolean" label="30123" help="">
                    <level>0</level>
                    <default>false</default>
                    <control type="toggle"/>
                </setting>
                <setting id="suspend_screensaver" type="boolean" label="30124" help="">
                    <level>0</level>
                    <default>false</default>
                    <control type="toggle"/>
                </setting>
                <setting id="suspend_joystick" type="boolean" label="30126" help="">
                    <level>0</level>
                    <default>false</default>
                    <control type="toggle"/>
                </setting>
            </group>
        </category>
        <category id="akl_advanced" label="30011">
			<group id="1">
                <setting id="log_level" type="integer" label="30129" help="">
                    <level>1</level>
                    <default>1</default>
                    <constraints>
                        <options>
                            <option label="30911">0</option>
                            <option label="30912">1</option>
                            <option label="30913">2</option>
                            <option label="30914">3</option>
                            <option label="30915">4</option>
                        </options>
                    </constraints>
                    <control type="spinner" format="string"/>
                </setting>
                <setting id="akl.enabled" type="boolean" label="Enable as AKL plugin" help="">
                    <level>4</level>
                    <default>true</default>
                    <control type="toggle"/>
                </setting>
                <setting id="akl.plugin_types" type="string" label="AKL plugin type(s)" help="">
                    <level>4</level>
                    <default>LAUNCHER|SCANNER|SCRAPER</default>
                </setting>
                <setting id="akl.launcher.friendlyname" type="string" label="Launcher friendlyname" help="">
                    <level>4</level>
                    <default>Steam Library</default>
                </setting>
                <setting id="akl.scanner.friendlyname" type="string" label="Scanner friendlyname" help="">
                    <level>4</level>
                    <default>Steam Library</default>
                </setting>
                <setting id="akl.scraper.supported_metadata" type="string" label="Metadata supported by this scraper" help="">
                    <level>4</level>
                    <default>title|year|genre|plot|rating|developer|tags</default>
                </setting>
                <setting id="akl.scraper.supported_assets" type="string" label="Assets supported by this scraper" help="">
                    <level>4</level>
                    <default>fanart|banner|snap|trailer</default>
                </setting>
                <setting id="akl.scraper.friendlyname" type="string" label="Scraper friendlyname" help="">
                    <level>4</level>
                    <default>Steam</default>
                </setting>
            </group>
        </category>
    </section>
</settings>